# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/swagger2mcp

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Authentication
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_EXPIRES_IN=7d

# Default Admin User (created on first startup if no admin exists)
# IMPORTANT: Change the password after first login!
ADMIN_EMAIL=admin@swagger2mcp.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Microsoft OAuth2 (Optional - for social login)
MICROSOFT_CLIENT_ID=your-microsoft-app-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-app-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/auth/microsoft/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Anonymous Access (set to 'true' to allow anonymous users, 'false' to require authentication)
ALLOW_ANONYMOUS=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

